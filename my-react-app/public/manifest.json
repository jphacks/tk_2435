{
  "manifest_version": 3,

  "name": "GitHub Language Stats",
  "description": "Chrome Extension Sample",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "host_permissions": ["<all_urls>"]
}
