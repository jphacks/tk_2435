{
  "manifest_version": 3,
  "name": "Danger Word Checker",
  "version": "1.0",
  "description": "SNSの発言内容を事前にチェックして危険ワードに赤線を引きます",
  "permissions": ["storage", "scripting"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}
